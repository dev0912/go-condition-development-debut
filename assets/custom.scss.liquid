/*================ VARIABLES ================*/

/*============================================================================

  CUSTOM FONTS

==============================================================================*/

@font-face {
	font-family: 'Franchise-Bold';
	src: url('Franchise-Bold.eot');
	src: url('Franchise-Bold.woff') format('woff'), url('Franchise-Bold.ttf') format('truetype'), url('Franchise-Bold.svg') format('svg');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'SohneBreit-Dreiviertelfett';
	src: url('SohneBreit-Dreiviertelfett.eot');
	src: url('SohneBreit-Dreiviertelfett.woff') format('woff'), url('SohneBreit-Dreiviertelfett.ttf') format('truetype'), url('SohneBreit-Dreiviertelfett.svg') format('svg');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'Sohne-Buch';
	src: url('Sohne-Buch.eot');
	src: url('Sohne-Buch.woff') format('woff'), url('Sohne-Buch.ttf') format('truetype'), url('Sohne-Buch.svg') format('svg');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'Sohne-Halbfett';
	src: url('Sohne-Halbfett.eot');
	src: url('Sohne-Halbfett.woff') format('woff'), url('Sohne-Halbfett.ttf') format('truetype'), url('Sohne-Halbfett.svg') format('svg');
	font-weight: normal;
	font-style: normal;
}

/*================================================================================================================================================*/
$font_h: 'Franchise-Bold';
$font-p: 'Sohne-Buch';

body {

  h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6, .site-nav__link, .btn {
    font-family: $font_h;
  }
}

.site-header {
  padding: 0 30px;
}

body:not(.template-index) {
  margin-top: 125px;

  .site-header {
    background-color:#283d82;
  }
}

.arrow--wrapper {
  display: inline-block;
  line-height: 0;
  padding-left: 10px;
}

[data-header-section] {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 9;

  .announcement-bar__message {
    font-size: 16px;
    line-height: 21px;
    font-family: 'Sohne-Halbfett';
  }

  .site-nav__link {
    font-size: 20px;
    color: #fff;
    letter-spacing: .5px;
    font-weight: 100;
    text-transform: uppercase;
    transition: all 0.2s linear;

    &:not([disabled]):hover, &:focus{
      color: #c3c3c3;
      text-shadow: -1px 1px 1px #000000;
    }
  }

  .icon__fallback-text {
    color: #fff;
    text-transform: uppercase;
    font-family: $font_h;
    font-size: 20px;
    letter-spacing: .5px;
    transition: all 0.2s linear;

    &:hover {
      color: #c3c3c3;
      text-shadow: -1px 1px 1px #000000;
    }
  }

  .site-header__cart {
    
  }

  .site-header__icons-wrapper {
    .site-nav__link {
      & + a {
        margin-left: 15px;
      }
    }
  }
}

[data-section-type='hero-section'] {
  .mega-title {
    font-size: 90px;
    line-height: 90px;
    letter-spacing: 2.25px;
    text-shadow: none;
    color: #091545;
    margin: 0;
  }

  .mega-subtitle {
    font-size: 40px;
    line-height: 40px;
    font-family: $font_h;
  }

  .hero__btn {
    font-size: 25px;
    line-height: 54px;
    letter-spacing: .625px;
    padding: 0 35px;
    border: 2px solid #fff;
    border-radius: 30px;
    display: inline-flex;
    align-items: center;
    transition: all 0.2s linear;

    &:hover {
      box-shadow: 0 2px 4px 2px rgba(0,0,0,0.15), 0 1px 2px rgba(0,0,0,0.05);
      outline: 0;
      text-shadow: -1px 1px 1px #000000;
      background-color: rgba(255, 255, 255, 0.1);
    }
  }

  .hero--watermark {
    position: absolute;
    right: 0;
    bottom: 0;
    padding: 20px 25px;

    a {
      color: #fff;
      transition: all 0.2s linear;

      &:hover {
        outline: 0;
        text-shadow: -1px 1px 1px #000000;
      }
    }

    h2 {
      margin: 0;
      font-size: 40px;
      line-height: 40px;
      font-family: "Franchise-Bold";
      letter-spacing: 0;
    }
  }
}

[data-section='feature-columns'] {
  .section-header {
    margin-bottom: 25px;

    h2 {
      font-size: 60px;
      letter-spacing: 1.035px;
    }
  }

  .grid-items--wrapper {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: center;

    .grid-item {
      max-width: 33.33333%;
      width: 100%;
      padding: 0 35px;
      margin: 25px 0;
    }

    .h4 {
      font-size: 21px;
      font-family: 'Sohne-Halbfett';
      text-transform: uppercase;
      letter-spacing: .268px;
      line-height: 25px;
      margin-bottom: 10px;
    }

    .rte-setting {
      font-size: 16px;
      font-family: 'Sohne-Buch';
      line-height: 19px;
      letter-spacing: .23px;
    }
  }
}

[data-section=feature-row] {
  .feature-row__image-wrapper {
    margin: 0 auto;
  }

  .pro-col--left {
    background-color: #0002d7;
    padding: 55px 0;

    h2 {
      font-size: 50px;
      color: #fff;
      text-transform: uppercase;
      line-height: 50px;
      margin-bottom: 30px;
      max-width: 350px;
      text-align: center;
      margin: 0 auto 50px;
    }

    .feature-row__image-wrapper {
      max-width: 350px;
    }

    .product_link {
      text-align: center;
      max-width: 350px;
      margin: 60px auto 0;

      a {
        width: 100%;
        color: #0049b5;
        background-color: #fff;
        font-size: 34px;
        font-family: "Franchise-Bold";
        padding: 0;
        line-height: 70px;
        border-radius: 30px;
        transition: all 0.2s linear;

        &:hover {
          box-shadow: 0 2px 4px 2px rgba(0,0,0,0.15), 0 1px 2px rgba(0,0,0,0.05);
          outline: 0;
          opacity: 0.6;
        }
      }
    }
  }

  .pro-col--right, .col--left {
    &.feature-row__item {
      padding: 0 7.5%;

      h2 {
        font-size: 60px;
        text-transform: uppercase;
        line-height: 60px;
        margin-bottom: 30px;
      }

      .featured-row__subtext {
        font-size: 21px;
        line-height: 28px;
        font-family: 'Sohne-Buch';
      }
    }
  }

  .circle-img--wrapper {
    max-width: 235px;
    width: 100%;
    margin-bottom: 40px;
    border-radius: 50%;
    overflow: hidden;
  }
}

.quetes-section {
  background-color: #0c0289;
  padding: 110px 0 140px;
}

[data-section='quotes'] {
  .heading-img--wrapper {

    .img--inner {
      max-width: 56px;
      width: 100%;
      margin: 0 auto 20px;
      line-height: 0;
      border-radius: 50%;
      overflow: hidden;
    }
  }

  .section-header {
    margin-bottom: 90px;

    h2 {
      font-size: 60px;
      line-height: 60px;
      color: #fff;
      margin: 0 auto;
      letter-spacing: 0;
    }
  }

  .quote-icon {
    margin: 0 auto 30px;

    svg {
      &.icon {
        width: 35px;
        height: 35px;
      }

      path {
        fill: #fff;
      }
    }
  }

  .quotes-slider__text {
    .rte-setting {
      position: relative;
      padding-bottom: 25px;

      &:after {
        position: absolute;
        content: '';
        display: block;
        background-image: url(stars.png);
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        width: 100%;
        height: 25px;
        bottom: 0;
      }
    }
    p {
      color: #fff;
      font-size: 18px;
      line-height: 21px;
      letter-spacing: 2.523px;
      font-family: 'Sohne-Buch';
    }

    cite {
      color: #fff;
      font-size: 18px;
      line-height: 21px;
      letter-spacing: 2.523px;
      font-family: 'SohneBreit-Dreiviertelfett';

      &:before {
        content: '';
      }
    }
  }
}

[data-setion='footer-section'] {
  .page-width {
    &.padding-0 { padding: 0; }
  }

  .social-icons__item {
    padding: 0;

    & + .social-icons__item {

    }
  }

  .footer-bottom--bar {
    padding: 0;

    .footer-bottom--innter {
      display: flex;
      justify-content: space-between;

      small {
        font-size: 15px;
        font-family: 'Sohne-Buch';
        letter-spacing: .375px;
      }

      span {
        padding: 0 15px;
      }

      a {
        color: #fff;
        font-size: 15px;
        font-family: 'Sohne-Buch';
        letter-spacing: .375px;
        transition: all 0.2s linear;

        &:hover {
          color: #c3c3c3;
          text-shadow: -1px 1px 1px #000;
          text-decoration: none;
        }
      }
    }
  }

  .site-footer__linklist-item {

    & + .site-footer__linklist-item {
      margin-top: 15px;
    }

    a {
      font-size: 18px;
      font-family: 'Sohne-Buch';
      line-height: 23px;
      letter-spacing: .45px;
      text-transform: uppercase;
      transition: all 0.2s linear;

      &:hover {
        color: #c3c3c3;
        text-shadow: -1px 1px 1px #000;
        text-decoration: none;
        border-bottom: 0;
      }
    }
  }

  .newsletter--wrapper {
    justify-content: flex-end;
  }

  .site-footer__item-inner--newsletter {
    max-width: 350px;
  }

  .newsletter-title {
    font-size: 25px;
    font-family: 'Franchise-Bold';
    line-height: 31px;
    text-transform: uppercase;
    letter-spacing: .625px;
  }

  .site-footer__newsletter {

    .newsletter__input {
      color: #fff;
      background-color: transparent;
      border: 0;
      border-bottom: 2px solid #fff;
  
      &::-webkit-input-placeholder {
        color: #fff;
      }
  
      &::-moz-placeholder {
        color: #fff;
      }
  
      &:-ms-input-placeholder {
        color: #fff;
      }
  
      &::-ms-input-placeholder {
        color: #fff;
      }

      &:hover, &:focus {
        outline: none;
      }
    }

    .newsletter__submit {
      padding: 0 45px;
      border: 2px solid #fff;
      border-radius: 30px;
      display: inline-flex;
      align-items: center;
      width: initial;
      transition: all 0.2s linear;

      &:hover {
        box-shadow: 0 2px 4px 2px rgba(0,0,0,0.15), 0 1px 2px rgba(0,0,0,0.05);
        outline: 0;
        text-shadow: -1px 1px 1px #000000;
        background-color: rgba(255,255,255,0.1);
      }

      .newsletter__submit-text--large {
        font-size: 25px;
        line-height: 54px;
        letter-spacing: .625px;
        font-family: 'Franchise-Bold';
      }
    }
    
    .input-group {
      display: block;
    }
  }

  .newsletter-subtitle {
    font-size: 15px;
    font-family: 'Sohne-Buch';
    line-height: 25px;
    letter-spacing: .375px;
    margin-top: 15px;
  }
}

[data-section='all-natural-ingredients'] {

  .custom-feature-row {

  }

  .img-row--wrapper {

    h2 {
      font-size: 50px;
      color: #00194f;
      text-transform: uppercase;
      line-height: 50px;
      margin-bottom: 30px;
      text-align: center;
      margin: 0 auto 50px;
    }
  }

  .img-row--inner {
    width: 100%;
    max-width: 300px;
    margin: 0 auto;

    &.tablet {
      padding: 0 25px;
    }

    .img--wrapper {
      position: relative;
      width: 100%;

      .img-row {
        width: 100%;
        position: absolute;
        top: 0;
        display: block;
        margin: 0 auto;
      }
    }
  }

  .vtc-bar {
    width: 100%;
    text-align: center;
    line-height: 0;
    margin: 45px auto;

    span {
      display: inline-block;
      height: 75px;
      width: 5px;
      background-color: #000;
    }
  }
 
  .mid-description {
    p {
      font-size: 40px;
      line-height: 53px;
      text-align: center;
      font-family: 'Franchise-Bold';      
    }
  }

  .product_link {
    text-align: center;
    margin: 50px auto 100px;

    a {
      font-size: 25px;
      line-height: 54px;
      letter-spacing: .625px;
      padding: 0 50px;
      background-color: #006ff5;
      border-radius: 30px;
      display: inline-flex;
      align-items: center;
      transition: all 0.2s linear;

      &:hover {
        box-shadow: 0 2px 4px 2px rgba(10, 34, 167, 0.15), 0 1px 2px rgba(0,0,0,0.05);
        outline: 0;
        text-shadow: -1px 1px 1px #5e62af;
        background-color: rgba(0, 111, 245, 0.74);
      }
    }
  }
}